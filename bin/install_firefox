#!/usr/bin/env bash
USAGE="
USAGE: $0 [-h|-v version]
-v      version to download

"

VERSION=31.0
while true;
do
  case "$1" in
    -h | --help ) echo "$USAGE"; exit 1 ;;
    -v | --version ) VERSION="$2"; shift; shift ;;
    -- ) shift; break ;;
    * ) break ;;
  esac
done

wget http://download-installer.cdn.mozilla.net/pub/mozilla.org/firefox/releases/$VERSION/linux-x86_64/en-US/firefox-$VERSION.tar.bz2
tar xjf firefox*tar.bz2
rm -f firefox*tar.bz2
